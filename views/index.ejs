<% include partials/header %>
<% include partials/navbar %>
    <!--//////////////////////////////-->

    <!--Content-->

    <div class="container heading-text m-0 px-2 p-3 text-light">
        <h3>Movie
            <small class="text-muted">Index</small>
        </h3>
    </div>

    <!--Cardbody-->
    <div class="main container-fluid m-0 p-0">
        <div class="row m-0 p-0 card-deck">
            <!--<div class="card-deck">-->
            <%movie.forEach(function(movie){%>

                <div id="card" class="col-4 col-md-2 text-light m-0 p-0 flex-shrink-1 flex-grow-1">
                    <a href="/movie/<%= movie._id %>">
                        <div class="img shad rounded-top" style="background-image: url(<%=movie.poster%>)">
                            
                        </div>
                        <div class="card-body rounded-bottom shad flex-shrink-1 flex-grow-1">
                            <div class="title">
                                <h5 class="card-title">
                                    <%= movie["title"] %>
                                </h5>
                            </div>
                            <p class="card-text d-none d-lg-block">
                                <%= movie.plot %>
                            </p>
                            <div class="bottom-content d-flex align-items-center justify-content-between">
                                <h5 class="year p-0  m-0">
                                    <%= movie.year %>
                                </h5>
                                <div class="stars d-flex align-items-baseline">
                                    <!--<div class="star-container one">-->
                                    <!--<div class="star-base">-->
                                    <!--<div class="layer"></div>-->
                                    <!--    <i class="fas fa-star"></i>-->

                                    <!--</div>-->
                                    <!--<div class="star-rate">-->
                                    <!--    <i class="fas fa-star"></i>-->
                                    <!--</div>-->
                                    <!--</div>-->
                                    <!--</div>-->
                                    <div class="star-container">
                                        <div class="star-base">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        
                                        <div class="star-rate" style="width: <%= movie.imdb["rating"] *10 %>%">
                                            <i class="fas fa-star"></i>
                                        </div>
                                    </div>
                                    <h5 class="rating px-2 m-0">
                                        <%= movie.imdb["rating"] %>
                                    </h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
                <% }) %>
                    <!--</div>-->
        </div>
    </div>
    <script>
    </script>

    <% if (pages > 0) { %>
        <% include partials/pagination %>
            <% } %>

                <!--/////////////////////////////-->
                <% include partials/footer %>
