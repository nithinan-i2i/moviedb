<% include partials/header %>

    <div class="container">
        <h3>Movie
            <small class="text-muted">Index</small>
        </h3>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card">
                    <img src="" alt="Movie Poster" class="card-img-top">
                    <div class="card-body">
                        <h1 class="card-title">Movie</h1>
                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicingyy elit. Voluptates tempore sint dicta quis hic optio.</p>
                        <a href="#" class="btn btn-success">Read More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%movie.forEach(function(movie){%>
            <div class="ui items">
                <div class="item">
                    <div class="image">
                        <a href="/movie/<%= movie._id %>" class="ui small image">
                        <img class="ui rounded image" src="<%=movie.poster%>">
                        </a>
                    </div>
                    <!--</a>-->
                    <div class="content" id="index_content">
                        <a href="/movie/<%= movie._id %>" class="header">
                            <%= movie["title"] %>
                        </a>
                        <div class="meta"><span>Year : <%= movie.year %></span></div>
                        <!--<div class="description">-->

                        <!--    <%- movie.plot %>...-->
                        <!--</div>-->
                        <div class="extra">
                            <a href="/movie/<%= movie._id %>" class="ui blue basic button">Read More</a>
                        </div>
                    </div>
                </div>
                <div class="ui divider"></div>
            </div>
            <% }) %>

    <% if (pages > 0) { %>
        <% include partials/pagination %>
            <% } %>


                <% include partials/footer %>
