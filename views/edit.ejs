<% include partials/header %>

    <div class="ui main text raised container segment">
        <div class="ui huge header">Edit:
            <%=editmovie.title%>
        </div>
        <form class="ui form" action="/movie/<%=editmovie._id%>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="movie[title]" value="<%=editmovie.title%>">
            </div>
            <div class="field">
                <label>Year</label>
                <input type="text" name="movie[year]" value="<%=editmovie.year%>">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="movie[poster]" value="<%=editmovie.poster%>">
            </div>
            <div class="field">
                <label>Storyline</label>
                <textarea name="movie[plot]"><%- editmovie.plot %></textarea>
            </div>
            <button class="positive ui button" type="submit">Submit</button>
        </form>

    </div>



    <% include partials/footer %>
